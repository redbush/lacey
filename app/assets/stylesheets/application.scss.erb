@import "bootstrap-sprockets";
@import "bootstrap";

body {
  padding-top: 80px;
  position: relative;
}

#page {
  background: #ffffff;
  padding-bottom: 30px;
}

#intro {
  padding: 70px 20px 70px 20px;
  text-align: center;
  #job-title {
    font-weight: 900;
    font-size: 50px;
    margin-bottom: 15px;
  }
  #slogan {
    font-weight: 500;
    font-size: 30px;
    margin-bottom: 25px;
  }
  #text {
    text-align: left;
  }
}

.title {
  background: #5D478B;
  padding: 22px 0 22px 0;
  margin-bottom: 30px;
  text-align: center;
  color: #ffffff;
  font-weight: 900;
  font-size: 26px;
}

.project  {
  background: #2E2F30;
  margin-bottom: 30px;
  position: relative;
  border: 1px solid #2E2F30;
  .overlay {
    display: none;
    position: absolute;
    color: #ffffff;
    padding: 50px 20px 0 20px;
    width: 100%;
  }
  .company, .read-case-study {
    text-align: center;
    font-weight: 900;
  }
  .company {
    font-size: 30px;
    margin-bottom: 20px;
  }
  .read-case-study {
    font-size: 20px;
  }
  .brief-description {
    text-align: center;
    margin-bottom: 20px;
  }
}

#about {
  padding: 40px 0 40px 0;
  p {
    margin-bottom: 30px;
  }
}

#contact {
  padding: 40px 0 40px 0;
  #contact-text-1 {
    font-weight: 900;
    font-size: 36px;
    margin-bottom: 15px;
    text-align: center;
  }
  #contact-text-2 {
    font-size: 30px;
    text-align: center;
    margin-bottom: 30px;
  }
}

@mixin add_image_before($image_name) {
    display: inline-block;
    margin-bottom: 5px;
    &:before {
        content: url("#{$image_name}");
        display: inline-block;
        vertical-align: middle;
        padding-right: 5px;
    }
}

#email-link {
    @include add_image_before("<%= asset_path 'email.png' %>")
}

#linkedin-link {
    @include add_image_before("<%= asset_path 'linkedin.png' %>")
}

#footer {
    color: #ffffff;
    padding: 10px 0 10px 0;
    text-align: center;
}

@media (max-width: 768px) {
  #intro {
    #job-title {
      font-size: 20px;
    }
    #slogan {
      font-size: 18px;
    }
    #text {
      text-align: center;
    }
  }

  .project  {
    .overlay {
      padding: 10px;
    }
    .company {
      font-size: 16px;
      margin-bottom: 10px;
    }
    .read-case-study {
      font-size: 16px;
    }
    .brief-description {
      margin-bottom: 10px;
      font-size: 12px;
    }
  }

    #contact {
        #contact-text-1 {
            font-size: 20px;
        }
        #contact-text-2 {
            font-size: 18px;
        }
    }
}

@media (max-width: 992px) {
  .project  {
    .overlay {
      padding: 30px 10px 0 10px;
    }
    .company {
      font-size: 22px;
      margin-bottom: 10px;
    }
    .read-case-study {
      font-size: 16px;
    }
    .brief-description {
      margin-bottom: 10px;
      font-size: 12px;
    }
  }
}



